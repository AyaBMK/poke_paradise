          <h3>{{ similarProduct.name }}</h3>
            <p>{{ similarProduct.category.name }}</p>
    <a href="{{ path('app_product_item', { id: similarProduct.id }) }}" class="btn btn-primary" data-mdb-ripple-init>En savoir plus</a>

        </div>
