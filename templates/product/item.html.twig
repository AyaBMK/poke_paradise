{% block body %}
  <div class="container mt-5 pt-5">
    <div class="row">
      <div class="col-lg-6">
        <img src="/uploads/products/{{product.image}}" alt="" class="img-fluid" />
      </div>
      <div class="col-lg-6">
        <h1>{{product.name}}</h1>
