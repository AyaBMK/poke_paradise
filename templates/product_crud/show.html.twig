{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <div class="container pt-5 mt-5">
        <a href="{{ path('app_product_crud_index') }}"><i class="fa-solid fa-arrow-left"></i> Revenir à la liste</a>
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Image</th>
                <td><img src="/uploads/products/{{ product.image }}" alt="" class="img-fluid" width="100" height="100"></td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Catégorie</th>
                <td>{{ product.category.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ product.price }} €</td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('app_product_crud_edit', {'id': product.id}) }}" class="mb-2"><i class="fa-solid fa-pen-to-square"></i></a>

    {{ include('product_crud/_delete_form.html.twig') }}
    </div>
{% endblock %}
